<h1>Add A New Restaurant</h1>

<%= form_for @restaurant do |f| %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div>
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <div>
    <%= f.label :zip_code %>
    <%= f.text_field :zip_code %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

<br>

<div>
  <%= f.label :category %>
  <%= f.select :category, ['Asian','American', 'Italian', 'Mexican', 'Other'] %>
</div>

<br>

   <%= f.submit 'Submit' %>
<% end %>
<br>

<%= link_to 'Back', :back %>
